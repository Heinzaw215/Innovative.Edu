<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Innovative.Edu | <%= title %> </title>
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <section class="courses">
    <h1 class="heading">Our Courses</h1>
    <div class="box-container">
      <% courses.forEach(course=> { %>
        <div class="box">
          <div class="tutor">
            <img src="<%= course.tutorImage %>" alt="">
            <div class="info">
              <h3>
                <%= course.tutorName %>
              </h3>
              <span>
                <%= course.date %>
              </span>
            </div>
          </div>
          <div class="thumb">
            <img src="<%= course.thumbImage %>" alt="">
            <span>
              <%= course.videos %>
            </span>
          </div>
          <h3 class="title">
            <%= course.title %>
          </h3>
          <a href="<%= course.playlistLink %>" class="inline-btn">view playlist</a>
        </div>
        <% }) %>
    </div>
  </section>
</body>

</html>