{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off"
  },
  "overrides": [
    {
      "files": ["*.ejs"],
      "rules": {
        "no-undef": "off",
        "no-unused-vars": "off",
        "no-unescaped-entities": "off"
      }
    }
  ]
}
